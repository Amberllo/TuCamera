<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_bubble">

    <EditText
        android:alpha="0.8"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/et_bubble_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="16sp"
        android:hint="@string/publish_comment"
        android:textColorHint="@color/grey_8b8b8b"
        android:textColor="@color/black"
        android:inputType="text|textMultiLine"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:singleLine="false"
        />

    <TextView
        android:layout_alignTop="@id/et_bubble_input"
        android:visibility="gone"
        android:id="@+id/tv_show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_8b8b8b"
        android:textSize="15sp"
        android:text="可输入字数 33"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />

    <ImageView

        android:layout_alignTop="@id/et_bubble_input"
        android:id="@+id/tv_action_done"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_delete"
        android:gravity="center"

        android:layout_alignParentRight="true"
    />

</RelativeLayout>