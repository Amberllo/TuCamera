<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_bubble">

    <EditText

        android:background="@color/white_alpha_50"
        android:layout_alignParentBottom="true"
        android:id="@+id/et_bubble_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="16sp"
        android:hint="@string/publish_comment"
        android:textColor="@color/black"
        android:inputType="text|textMultiLine"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:singleLine="false"
        />

    <TextView
        android:layout_alignTop="@id/et_bubble_input"
        android:visibility="gone"
        android:id="@+id/tv_show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_8b8b8b"
        android:textSize="15sp"
        android:text="可输入字数 33"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />

    <TextView
        android:visibility="gone"
        android:layout_alignTop="@id/et_bubble_input"
        android:id="@+id/tv_action_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_e73a3d"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:text="@string/complete"
        android:gravity="center"
        android:layout_alignParentRight="true"
    />

</RelativeLayout>